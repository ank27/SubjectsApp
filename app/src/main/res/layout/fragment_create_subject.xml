<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/create_subject_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
            android:id="@+id/createsubjectLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:background="@color/colorbackground"
            android:paddingBottom="10dp">
            <android.support.v7.widget.CardView
                android:id="@+id/card_subject_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="2dp"
                card_view:contentPadding="8dp"
                android:layout_margin="8dp"
                android:elevation="2dp"
                android:visibility="visible"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                xmlns:card_view="http://schemas.android.com/apk/res-auto">
                <RelativeLayout
                    android:id="@+id/subjectLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">
                    <TextView
                        android:id="@+id/titleSubjectText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        style="@style/TextViewAppearanceMediumBold"
                        android:text="Subject Details"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleSubjectText"
                        android:layout_marginTop="8dp"
                        android:visibility="visible"
                        app:hintTextAppearance="@style/TextViewAppearanceHint"
                        android:id="@+id/subject_title_text_layout">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/title"
                            android:hint="Add subject title here" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/subject_title_text_layout"
                        android:layout_marginTop="8dp"
                        app:hintTextAppearance="@style/TextViewAppearanceHint"
                        android:id="@+id/subject_desc_layout">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/description"
                            android:hint="Add Subject Description" />
                    </android.support.design.widget.TextInputLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_subject_image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="2dp"
                card_view:contentPadding="8dp"
                android:layout_margin="8dp"
                android:elevation="2dp"
                xmlns:card_view="http://schemas.android.com/apk/res-auto">
                <RelativeLayout
                    android:id="@+id/imageLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/titleImageText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="10dp"
                        style="@style/TextViewAppearanceMediumBold"
                        android:text="Add Subject Image"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_below="@+id/titleImageText">
                        <ImageView
                            android:id="@+id/subject_image"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:alpha="0.87"
                            android:background="@drawable/ic_photo" />
                        <Button
                            android:id="@+id/add_image_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Image"
                            android:layout_toRightOf="@+id/subject_image"
                            android:background="@color/white"
                            android:alpha="0.87"
                            android:textAllCaps="false"
                            android:padding="5dp"
                            android:layout_marginLeft="30dp"/>
                       </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Subject"
                android:id="@+id/btn_save"
                android:layout_margin="16dp"
                android:padding="8dp"
                android:background="@color/colorPrimary"
                style="@style/TextViewAppearanceButton"/>
        </LinearLayout>
</RelativeLayout>
